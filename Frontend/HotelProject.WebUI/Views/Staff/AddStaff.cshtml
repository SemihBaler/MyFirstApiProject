@model AddStaffDto
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-action="AddStaff" asp-controller="Staff" method="post">

    <label>Personel Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Personel Ünvanı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Sosyal Medya-1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <span asp-validation-for="SocialMedia1" class="text-danger"></span>
    <br />
    <label>Sosyal Medya-2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <span asp-validation-for="SocialMedia2" class="text-danger"></span>
    <br />
    <label>Sosyal Medya-3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <span asp-validation-for="SocialMedia3" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary">Hizmet Ekle</button>

</form>


